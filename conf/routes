# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                            controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                 controllers.Assets.at(path="/public", file)

#UserLogin
GET           /login                                        controllers.UserLogin.loginUI
POST          /login                                        controllers.UserLogin.login
POST          /logout                                       controllers.UserLogin.logout
GET           /me                                           controllers.UserLogin.me

#Class
GET           /classes                                      controllers.ClassController.classList
#GET           /:classid                                    controllers.ClassController.TODO
#POST          /:classId/registration                       controllers.ClassController.TODO
GET           /:classId/registrations                       controllers.ClassController.registeredList(classId:Int)
#
